<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".propertyActivity">

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              >



              <HorizontalScrollView
                  android:layout_width="match_parent"
                  android:layout_height="250dp">
                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:paddingVertical="20dp"
                      android:paddingHorizontal="5dp"
                      >

                      <ImageView
                          android:layout_width="400dp"
                          android:layout_height="250dp"
                          android:src="@drawable/demo_prop1"
                          android:scaleType="fitXY"
                          />
                      <ImageView
                          android:layout_width="400dp"
                          android:layout_height="250dp"
                          android:src="@drawable/demo_prop2"
                          android:scaleType="fitXY"
                          />
                      <ImageView
                          android:layout_width="400dp"
                          android:layout_height="250dp"
                          android:src="@drawable/demo_prop3"
                          android:scaleType="fitXY"
                          />
                  </LinearLayout>
              </HorizontalScrollView>

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="â‚¹ 20000200"
                  android:textStyle="bold"
                  android:textSize="25sp"
                  android:padding="5dp"
                  android:background="#F3F3F3"
                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="3bhk bungalow for sell. "
                  android:textStyle="bold"
                  android:textSize="20sp"
                  android:padding="5dp"
                  android:background="#F3F3F3"
                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Details"
                  android:textStyle="bold"
                  android:textSize="25sp"
                  android:padding="5dp"
                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Type: Bungalow"
                  android:textSize="20sp"
                  android:padding="5dp"
                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Address:\nstreet no:1, ram nagar, Vadodara, Gujarat, India. "
                  android:textSize="20sp"
                  android:padding="5dp"
                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Area: 1400 sqft."
                  android:textSize="20sp"
                  android:padding="5dp"
                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="BedRoom: 3"
                  android:textSize="20sp"
                  android:padding="5dp"
                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Bathroom: 3"
                  android:textSize="20sp"
                  android:padding="5dp"
                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Furniture type: Full"
                  android:textSize="20sp"
                  android:padding="5dp"
                  />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="5dp"
                  android:text="Parking type: Car parking"
                  android:textSize="20sp" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="5dp"
                  android:text="Description: \nOther things than details are provided here"
                  android:textSize="20sp" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                  <Button
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Set schedule for visit"
                      android:layout_margin="10dp"
                      />


              </LinearLayout>

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#F3F3F3"
                  android:orientation="horizontal"
                  android:padding="5dp"
                  >

                  <de.hdodenhof.circleimageview.CircleImageView
                      android:id="@+id/circleImageView"
                      android:layout_width="60dp"
                      android:layout_height="60dp"
                      android:src="@drawable/user_image"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_marginStart="24dp"
                      android:gravity="center"
                      android:padding="4dp"
                      android:text="name of agent "
                      android:textSize="20dp"
                      android:textStyle="bold"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toEndOf="@+id/circleImageView"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_bias="0.49" />

                  <Button
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_gravity="end"
                      android:layout_margin="2dp"
                      android:gravity="center"
                      android:text="Chat"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />

              </androidx.constraintlayout.widget.ConstraintLayout>

          </LinearLayout>
      </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>