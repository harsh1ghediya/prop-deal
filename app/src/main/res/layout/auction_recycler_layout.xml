<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="3dp"
    android:layout_margin="2dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_recycler_layout_style"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_of_product"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/banglow_demo" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/start_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:paddingStart="10dp"
                    android:text="Start: 24/08/21   Time: 12:00"
                    android:textColor="@color/purple_700"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/end_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:paddingStart="10dp"
                    android:text="End: 25/08/21  Time: 12:00"
                    android:gravity="end"
                    android:textColor="#D82C2C"
                    android:textSize="18sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <TextView
                android:id="@+id/title_of_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_medium"
                android:paddingVertical="5dp"
                android:paddingStart="10dp"
                android:text="Title and something about property"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/distance_of_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Distance"
                android:textColor="@color/gray"
                tools:ignore="RtlSymmetry" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/location_of_property"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:text="âš Location"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/favourite_property"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/favorite_circlr_style"
                    android:elevation="10dp"
                    android:padding="5dp"
                    android:src="@drawable/before_like"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.944"
                    app:layout_constraintStart_toEndOf="@+id/location_of_property"
                    tools:layout_editor_absoluteY="-6dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>